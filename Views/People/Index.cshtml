@model ResultsViewModel<PeopleViewModel>

@{
    ViewData["Title"] = "People";
}

<h1 class = "text-center">@ViewData["Title"]</h1>

@if(Model.Results?.Count() > 0)
    {
        <div class = "d-flex flex-row flex-wrap">
            @foreach(var person in Model.Results)
            {
                <div class = "item-container">
                    <div class = "item">
                    <h4>@person.Name</h4>
                    <div class = "item-traits">
                        <p>Mass: @person.Mass</p>
                        <p>Height: @person.Height</p>
                        <p>Born: @person.BirthYear</p>
                        <p>Eye Color: @person.EyeColor</p>
                        <p>Gender: @person.Gender</p>
                        <p>Hair Color: @person.HairColor</p>
                        <p>Skin Color: @person.SkinColor</p>
                        <p>Created: @person.Created</p>
                        <p>Homeworld URL: @person.HomeworldUrl</p>
                        
                        @foreach(var speciesUrl in person.SpeciesUrl)
                        {
                            <p>Species URL: @speciesUrl</p>
                        }

                        @foreach(var starshipUrl in person.StarshipUrl)
                        {
                            <p>Starship URL: @starshipUrl</p>
                        }

                        @foreach(var vehicleUrl in person.VehicleUrl)
                        {
                            <p>Vehicle URL: @vehicleUrl</p>
                        }
                    </div>
                </div>
                </div>
            }
        </div>
        <div class = "d-flex flex-row justify-content-between p-2">
            @if(Model.Previous is not null)
            {
                <a class= "btn btn-secondary" asp-action="Index" asp-route-page="@Model.PreviousPageNum"> Previous</a>
            }
            else
            {
                <span></span>
            }
            @if(Model.Next is not null)
            {
                <a class= "btn btn-secondary" asp-action="Index" asp-route-page="@Model.NextPageNum">Next</a>
            }
        </div>
    }
    else
    {
        <p>There are no results for this page.</p>
    }

<div>
    
</div>